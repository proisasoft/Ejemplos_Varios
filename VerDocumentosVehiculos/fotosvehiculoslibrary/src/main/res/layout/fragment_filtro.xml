<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
   >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/cardview_dark_background"
             android:text="@string/busqueda"
             android:textSize="@dimen/size_titles_filter"
             android:padding="5dp"
             />
         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:cardElevation="0dp"
             >
             <include layout="@layout/filtro_busqueda_layout"/>
         </android.support.v7.widget.CardView>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/cardview_dark_background"
             android:text="@string/precio_condicion"
             android:textSize="@dimen/size_titles_filter"
             android:padding="5dp"
             />
         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:cardElevation="0dp"
             >
             <include layout="@layout/filtro_precio_condicion_layout"/>
         </android.support.v7.widget.CardView>
         <!--
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/cardview_dark_background"
             android:text="@string/mas_opciones"
             android:textSize="@dimen/size_titles_filter"
             android:padding="5dp"
             />

         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:cardElevation="5dp"
             >
             <include layout="@layout/filtro_mas_opciones_layout"/>
         </android.support.v7.widget.CardView>-->
         <TextView
             android:id="@+id/btn_buscar"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/buscar"
             android:background="@android:color/white"
             android:textColor="@color/colorAccent"
             android:clickable="true"
             android:focusable="true"
             android:layout_gravity="end"
             android:elevation="0dp"
             android:textSize="@dimen/size_titles_filter"
             android:padding="15dp"
             />


     </LinearLayout>
    </ScrollView>
</FrameLayout>